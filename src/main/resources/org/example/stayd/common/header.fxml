<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.stayd.common.HeaderController"
      spacing="10" style="-fx-background-color: #4CAF50; -fx-padding: 10;" prefHeight="100">

    <!-- 왼쪽: 로고 -->
    <Label text="Logo" style="-fx-text-fill: white; -fx-font-size: 20px;"/>

    <!-- 오른쪽: 알림 및 유저 아이콘 -->
    <HBox spacing="20" HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
        <!-- 알림 아이콘 -->
        <Button style="-fx-background-color: transparent; -fx-border-color: transparent;">
            <ImageView fx:id="notificationIcon" fitHeight="24" fitWidth="24"/>
        </Button>

        <!-- 유저 아이콘 -->
        <Button style="-fx-background-color: transparent; -fx-border-color: transparent;">
            <ImageView fx:id="userIcon" fitHeight="24" fitWidth="24"/>
        </Button>
    </HBox>

</HBox>